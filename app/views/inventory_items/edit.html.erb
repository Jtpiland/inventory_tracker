<h1>Update Inventory Item</h1>
<%= form_with url: "/inventory_items/#{@inventory_item.id}", method: :patch, local: true do |f| %>
  <%= f.label :item %>
  <%= f.select :item, @items, selected: @inventory_item.item.name %>

  <%= f.label :warehouse %>
  <%= f.select :warehouse, @warehouses, selected: @inventory_item.warehouse.name %>

  <%= f.label :quantity %>
  <%= f.number_field :quantity, value: @inventory_item.quantity %>

  <%= f.submit %>
<% end %>
<%= link_to "Return to Homepage", "/" %><br>