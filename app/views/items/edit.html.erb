<h1>Update Item</h1>
<%= form_with url: "/items/#{@item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>Remove Decimal

  <%= f.submit %>
<% end %>
<%= link_to "Return to Homepage", "/" %><br>
